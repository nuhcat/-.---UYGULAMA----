<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Uygulama Teması -->
    <style name="Theme.KanTahliliUygulamasi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Renkler -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Arka plan rengi -->
        <item name="android:windowBackground">#f0f4f8</item>

        <!-- Genel font (Poppins ile güncellendi) -->
        <item name="android:fontFamily">@font/poppins_regular</item>

        <!-- Varsayılan buton stili -->
        <item name="buttonStyle">@style/CustomButton</item>

        <!-- TextInputLayout için varsayılan stil -->
        <item name="textInputStyle">@style/CustomTextInput</item>
    </style>

    <!-- Özel Buton Stili (Mavi Ripple) -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Çıkış Butonu (Kırmızı) -->
    <style name="LogoutButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- TextInputLayout için özel stil -->
    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <!-- Hint yazı stili -->
    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="OneriBulut">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/bulut_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>
