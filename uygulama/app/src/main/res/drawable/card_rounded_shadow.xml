        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Beyaz arka planlı ana kart -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
