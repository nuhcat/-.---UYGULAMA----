<!-- res/drawable/rounded_button_blue.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Butonun arkaplan rengi: hoş bir mavi tonu -->
    <solid android:color="#2980b9" />

    <!-- Köşeleri yuvarlat -->
    <corners android:radius="16dp" />

    <!-- İç boşluk -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <!-- Yükseklik sabit -->
    <size android:height="56dp" />
</shape>
