<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Arka plan resmi -->
    <ImageView
        android:id="@+id/bgClock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/denemetarih2"
        android:alpha="0.35" />

    <!-- Ana içerik -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Kart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FAFAFA"
                android:minHeight="480dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- Başlık -->
                    <TextView
                        android:id="@+id/tvReminderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hatırlatıcı"
                        android:textSize="30sp"
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="24dp" />

                    <!-- Tarih Seç Butonu -->
                    <LinearLayout
                        android:id="@+id/btnPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_button_blue_gradient"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarih Seç"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <!-- Seçilen Tarih -->
                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henüz tarih seçilmedi"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/poppins_medium" />

                    <!-- Ayarla Butonu -->
                    <LinearLayout
                        android:id="@+id/btnSetReminder"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/rounded_button_blue_gradient"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Hatırlatıcıyı Ayarla"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <!-- İptal Et Butonu -->
                    <LinearLayout
                        android:id="@+id/btnCancelReminder"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_button_red_gradient"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hatırlatıcıyı İptal Et"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Animasyon (card'ın altında) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animPen"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="takvim.json" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
