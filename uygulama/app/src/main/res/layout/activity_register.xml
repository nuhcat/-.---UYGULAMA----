<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kans" />

    <View
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvRegisterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KayÄ±t Ol"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular" />

            <LinearLayout
                android:id="@+id/registerCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_rounded_shadow"
                android:padding="24dp"
                android:elevation="12dp">

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="E-posta adresiniz"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_rounded_shadow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableStart="@drawable/email_24"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Åžifreniz"
                    android:textColor="#000000"
                    android:textColorHint="#444444"
                    android:inputType="textPassword"
                    android:background="@drawable/input_rounded_shadow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableStart="@drawable/lock_24"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:id="@+id/layoutButtonRegisterSecond"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_button_blue_gradient"
                    android:gravity="center_vertical|start"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_kayit"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KayÄ±t Ol"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <!-- ðŸ”½ Åžifremi Unuttum yazÄ±sÄ± burada -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ã–rnek KayÄ±t olma?"
                    android:textColor="#0066CC"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animPen"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="-80dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="animation_1748445690598.json" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
